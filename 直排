w = World(10, 10)    
w.robot(1, 1)        

r = AnimatedRobot(w, 1, 1)
def turn_right():
    for i in range(3):
        r.turn_left()
        
def one():
    r.turn_left()
    r.move(9)  
    turn_right()
    r.move(1)
    turn_right()
    r.move(9)
    r.turn_left()
    r.move(1) 
    
for i in range(5):
    one()
1 
